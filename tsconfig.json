{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2015",
    "lib": ["dom", "es2017"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "buildOnSave": false,
  "files": ["index.ts"]
}
